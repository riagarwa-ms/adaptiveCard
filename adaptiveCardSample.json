{
  "type": "AdaptiveCard",
  "msTeams": {
    "width": "full"
  },
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "256px",
              "items": [
                {
                  "type": "Image",
                  "url": "${imageUrl}",
                  "width": "256px",
                  "height": "150px"
                }
              ],
              "padding": "None"
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Container",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${siteName}",
                      "weight": "Bolder",
                      "fontType": "Default",
                      "size": "small",
                      "spacing": "None"
                    },
                    {
                      "type": "TextBlock",
                      "text": "${pageTitle}",
                      "fontType": "Default",
                      "size": "Large",
                      "spacing": "small",
                      "maxLines": 1,
                      "wrap": true
                    },
                    {
                      "type": "ColumnSet",
                      "columns": [
                        {
                          "type": "Column",
                          "width": "stretch",
                          "items": [
                            {
                              "type": "TextBlock",
                              "text": " ",
                              "fontType": "Default",
                              "isSubtle": true,
                              "size": "Small",
                              "spacing": "small"
                            },
                            {
                              "type": "TextBlock",
                              "text": " ",
                              "fontType": "Default",
                              "isSubtle": true,
                              "size": "Small",
                              "spacing": "medium"
                            },
                            {
                              "type": "TextBlock",
                              "text": " ",
                              "fontType": "Default",
                              "isSubtle": true,
                              "size": "Small",
                              "spacing": "extraLarge"
                            },
                            {
                              "type": "TextBlock",
                              "text": "${authorName}",
                              "fontType": "Default",
                              "isSubtle": true,
                              "size": "Small",
                              "spacing": "large"
                            },
                            {
                              "type": "TextBlock",
                              "text": "${string(authorDate)}",
                              "fontType": "Default",
                              "isSubtle": true,
                              "size": "Small",
                              "spacing": "None"
                            }
                          ],
                          "padding": "None"
                        }
                      ],
                      "padding": "None"
                    }
                  ],
                  "padding": "None"
                }
              ],
              "spacing": "medium"
            }
          ]

        }
      ]
    }
  ],
  "selectAction": {
    "type": "Action.OpenUrl",
    "url": "${stageViewUrl}"
  },
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}